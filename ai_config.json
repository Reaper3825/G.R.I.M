{
  "tone": "optimistic",
  "optimism_level": 0.8,
  "encouragement_phrases": ["Yay!", "You can do it!", "Keep going!"],
  "formality": "casual",

  "backend": "auto",
  "ollama_url": "http://127.0.0.1:11434",
  "localai_url": "http://127.0.0.1:8080/v1",
  "default_model": "mistral",

  "voice": {
    "mode": "local",
    "engine": "coqui",                        // ðŸ”¹ Default engine
    "speaker": "p225",                        // ðŸ”¹ Default VCTK speaker
    "speed": 1.0,                             // ðŸ”¹ Playback speed multiplier
    "output_dir": "resources/tts_out",        // ðŸ”¹ Where to save generated wav files

    "local_engine": "en_US-amy-medium.onnx",  // Optional fallback (Piper/SAPI/etc.)
    "cloud_engine": "openai",                 // Optional cloud fallback

    "rules": {
      "startup": "sapi",                      // Use Windows SAPI for boot messages
      "reminder": "coqui",                    // Coqui for reminders
      "summary": "coqui",                     // Coqui for summaries
      "banter": "coqui"                       // Coqui for casual chatter
    },

    "silence_threshold": 0.02,
    "silence_timeout_ms": 4000,
    "input_device_index": 1,
    "tts_url": "http://127.0.0.1:8080/tts"
  },

  "api_keys": {
    "openai": "sk-your-openai-key-here",
    "elevenlabs": "",
    "azure": ""
  },

  "whisper": {
    "whisper_model": "ggml-base.en.bin",
    "language": "en",
    "max_tokens": 32,
    "sampling_strategy": "beam",
    "temperature": 0.2,
    "min_speech_ms": 500,
    "min_silence_ms": 1200
  }
}
