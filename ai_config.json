{
  "tone": "optimistic",
  "optimism_level": 0.8,
  "encouragement_phrases": ["Yay!", "You can do it!", "Keep going!"],
  "formality": "casual",

  "backend": "auto",
  "ollama_url": "http://127.0.0.1:11434",
  "localai_url": "http://127.0.0.1:8080/v1",
  "default_model": "mistral",

  "voice": {
    "mode": "hybrid",
    "local_engine": "en_US-amy-medium.onnx",
    "cloud_engine": "openai",
    "rules": {
      "startup": "local",
      "reminder": "local",
      "summary": "cloud",
      "banter": "cloud"
    },
    "silence_threshold": 0.02,
    "silence_timeout_ms": 4000,
    "input_device_index": 1,
    "tts_url": "http://127.0.0.1:8080/tts"
  },

  "api_keys": {
  "openai": "sk-your-openai-key-here",
  "elevenlabs": "",
  "azure": ""
},

"whisper": {
  "whisper_model": "ggml-base.en.bin",
  "language": "en",
  "max_tokens": 32,
  "sampling_strategy": "beam",
  "temperature": 0.2,
  "min_speech_ms": 500,
  "min_silence_ms": 1200
}

}
